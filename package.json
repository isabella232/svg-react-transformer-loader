{
  "name": "@mapbox/svg-react-transformer-loader",
  "version": "0.5.0",
  "description": "Webpack loader to transform SVG files into React components",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "format": "prettier --single-quote --write '{,test/**/}*.js'",
    "lint": "eslint .",
    "test-jest": "jest",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/svg-react-transformer-loader.git"
  },
  "keywords": [
    "webpack",
    "loader",
    "svg",
    "react",
    "svg-to-jsx",
    "transform"
  ],
  "author": "Mapbox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mapbox/svg-react-transformer-loader/issues"
  },
  "homepage": "https://github.com/mapbox/svg-react-transformer-loader#readme",
  "dependencies": {
    "@mapbox/svg-react-transformer": "^0.7.0",
    "loader-utils": "^1.1.0",
    "pascal-case": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "eslint-plugin-node": "^5.1.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "roots": [
      "./test"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=4"
  }
}
